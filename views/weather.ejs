<%- include ("../partials/header.ejs") %>
    <div class="animate__animated animate__bounceIn">
      <h1 class="text-center"><%= name %>, <%= sys.country %></h1>
      <p class="text-center text-uppercase"><%= weather[0].description %></p>

      <div class="container mt-5">
        <p class="text-center h1"><%= Math.round(main.temp) %> &#176; C</p>
        <p class="text-center">
          <span class="h3 text-uppercase"><%= weather[0].main %></span>
        </p>
        <div class="text-center">
          <img
            src="http://openweathermap.org/img/wn/<%= weather[0].icon %>@2x.png"
            alt=""
          />
        </div>

        <p class="text-center">
          <b>Feels like:</b> <%= Math.round(main.feels_like) %> &#176; C
        </p>
        <div class="text-center">
          <a href="/" class="btn btn-sm btn-danger"> Back to search</a>
        </div>
      </div>
    </div>
</body>
<%- include ("../partials/footer.ejs") %>
